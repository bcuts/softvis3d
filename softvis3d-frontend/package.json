{
  "name": "softvis3d-frontend",
  "version": "1.0.0",
  "description": "Frontend for the SonarQube-Plugin Softvis3D",
  "main": "src/app.tsx",
  "scripts": {
    "postinstall": "yarn run install:config -s && yarn run install:dist -s && yarn run install:typings -s",
    "install:config": "shx cp -n config/dev.example.ts config/dev.ts",
    "install:dist": "shx cp node_modules/react/dist/react.min.js node_modules/react-dom/dist/react-dom.min.js node_modules/three/build/three.min.js app/static/",
    "install:typings": "typings install",
    "start": "webpack-dev-server",
    "prebuild": "yarn run lint -s && yarn run test -s",
    "build": "yarn run build:force -s",
    "prebuild:ci": "yarn run lint -s && yarn run test:coverage -s && yarn run test:sonarqube",
    "build:ci": "yarn run build:force -s",
    "build:force": "webpack --progress --colors --prod",
    "lint": "yarn run lint:sources -s && yarn run lint:tests -s",
    "lint:sources": "tslint \"src/**/*.ts?(x)\" && shx echo \"[tslint] Lint successful (Sources)\"",
    "lint:tests": "tslint \"test/**/*.ts?(x)\" && shx echo \"[tslint] Lint successful (Tests)\"",
    "test": "mocha",
    "test:coverage": "nyc mocha",
    "test:sonarqube": "mocha --reporter mocha-sonar-generic-test-coverage > coverage/sonar-coverage.xml",
    "posttest:coverage": "shx rm -r .nyc_output"
  },
  "author": "Stefan Rinderle & Yvo Niedrich",
  "contributors": [
    {
      "name": "Stefan Rinderle",
      "email": "stefan@rinderle.info",
      "url": "https://github.com/stefanrinderle"
    },
    {
      "name": "Yvo Niedrich",
      "email": "yvo.niedrich@gmail.com",
      "url": "https://github.com/Ungolianth"
    }
  ],
  "license": "LGPL-3.0",
  "repository": {
    "type": "http",
    "url": "https://github.com/stefanrinderle/softvis3d.git"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "codecity-visualizer": "^0.4.4",
    "mobx": "^2.7.0",
    "mobx-react": "^4.1.0",
    "node-sass": "^4.5.0",
    "react": "^15.4.2",
    "react-custom-scrollbars": "^4.0.2",
    "react-dom": "^15.4.2",
    "sass-loader": "^4.1.1",
    "three": "^0.84.0",
    "three-orbit-controls": "^82.1.0",
    "ts-node": "^2.1.0",
    "tslint": "^4.4.2",
    "typescript": "^2.1.6",
    "typings": "^2.1.0",
    "webpack": "^1.14.0"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "chai": "^3.5.0",
    "core-js": "^2.4.1",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "jsdom": "9.10.0",
    "jsdom-global": "2.1.1",
    "mocha": "^3.2.0",
    "mocha-sonar-generic-test-coverage": "0.0.1",
    "nyc": "^10.1.2",
    "react-addons-test-utils": "^15.4.2",
    "shx": "^0.2.2",
    "sinon": "^1.17.7",
    "source-map-loader": "^0.1.6",
    "ts-loader": "^2.0.0",
    "webpack-dev-server": "^1.16.2"
  }
}
